{
    "name": "tool-shed/coding-conventions",
    "description": "A set of tools to validate coding conventions / rules",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tool Shed",
            "email": "opensource@toolshed.be"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "brianium/paratest": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "infection/infection": "^0.17",
        "mockery/mockery": "^1.0",
        "nikic/php-parser": "^4.0",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "phpro/grumphp": "^0.22",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    }
}
